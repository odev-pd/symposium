{
	"name": "mattstauffer/savemyproposals",
	"description": "Save My Proposals",
	"keywords": ["proposals", "conference", "cfp"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",
		"juy/profiler": "1.0.*",
		"kmd/logviewer": "1.1.*",
		"rtablada/package-installer": "0.1.*",
		"bugsnag/bugsnag-laravel": "1.0.*"
	},
	"require-dev": {
		"way/guard-laravel": "*",
		"way/generators": "1.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
		"psr-0": {
			"SaveMyProposals": "app/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
